<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <%= f.text_field :name %> : <%= f.label :name %>  
  </div>
  <div class="field">
    
    <%= f.text_field :email %> : <%= f.label :email %> 
  </div>
  <div class="field">
   
    <%= f.text_field :subject %> :  <%= f.label :subject %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Request"%>
  </div>
<% end %>
