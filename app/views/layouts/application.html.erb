<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <%= csrf_meta_tag %>
        <%= render 'layouts/stylesheets' %>
		<script>
  $(document).ready(function() {
    $("#accordion-edu").accordion({ collapsible: true });
	$("#accordion-exp").accordion({ collapsible: true });
	$("#accordion-res").accordion({ collapsible: true });
	$("#accordion-con").accordion({ collapsible: true });
	
  });
  </script>
    </head>
    <body>
        <div class="container">
            <%= render 'layouts/header' %>
            <section class="round">
                <% flash.each do |key, value| %>
                <div class="flash <%= key %>">
                    <%= value %>
                </div>
                <% end %>
                <%= yield %>
            </section>
            <%= render 'layouts/footer' %>
            <%= debug(params) if Rails.env.development? %>
        </div>
    </body>
</html>
